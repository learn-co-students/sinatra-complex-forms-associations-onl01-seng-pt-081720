<h1>Update Pet</h1>
<form method="POST" action="/pets/<%= @pet.id %>">
<input id="hidden" type="hidden" name="_method" value="patch">
<label>Name: </label>
<input type="text" id="pet_name" name="name" value="<%= @pet.name%>">
<br>
<label>Owner: </label>
<% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%= "checked" if owner.pets.include?(@pet) %>><%= owner.name %></input><br>
  <% end %>
<input type="text" name="owner[name]" id="owner_name">
<br>
<input type="submit" value="Update Pet">
</form>